{
  "name": "Banner",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "Banner for specific domains",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "css": [
        "contentscript.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}